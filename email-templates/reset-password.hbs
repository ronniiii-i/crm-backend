<!-- email-templates/reset-password.hbs -->

<table
  width='100%'
  border='0'
  cellspacing='0'
  cellpadding='0'
  style='font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;'
>
  <tr>
    <td
      style='padding: 20px 0; text-align: center; border-bottom: 1px solid #eeeeee;'
    >
      <h1 style='color: #2563eb; margin: 0;'>{{appName}}</h1>
    </td>
  </tr>

  <tr>
    <td style='padding: 30px 20px;'>
      <h2 style='color: #111111; margin-top: 0;'>Password Reset Request</h2>
      <p style='color: #333333; font-size: 16px; line-height: 1.5;'>
        Hello
        {{name}},
      </p>
      <p style='color: #333333; font-size: 16px; line-height: 1.5;'>
        We received a request to reset your password. Click the button below to
        continue:
      </p>

      <table cellspacing='0' cellpadding='0' style='margin: 25px 0;'>
        <tr>
          <td align='center' bgcolor='#2563eb' style='border-radius: 4px;'>
            <a
              href='{{resetLink}}'
              target='_blank'
              style='display: inline-block; padding: 12px 24px; font-size: 16px; color: #ffffff; text-decoration: none; font-weight: bold;'
            >
              Reset Password
            </a>
          </td>
        </tr>
      </table>

      <p style='color: #666666; font-size: 14px; line-height: 1.5;'>
        This link will expire in 1 hour. If you didn't request this, please
        <a href='{{supportLink}}' style='color: #2563eb;'>contact our support
          team</a>
        immediately.
      </p>
    </td>
  </tr>

  <tr>
    <td
      style='padding: 20px; background-color: #f9f9f9; text-align: center; font-size: 12px; color: #666666;'
    >
      <p style='margin: 0;'>
        Â©
        {{year}}
        {{appName}}. All rights reserved.<br />
        <a
          href='{{privacyLink}}'
          style='color: #2563eb; text-decoration: none;'
        >Privacy Policy</a>
        |
        {{!-- <a href="{{unsubscribeLink}}" style="color: #2563eb; text-decoration: none;">Unsubscribe</a> --}}
      </p>
      <p style='margin: 10px 0 0 0;'>
        {{companyAddress}}
      </p>
    </td>
  </tr>
</table>

<div style='display:none;font-size:1px;color:#ffffff;line-height:1px;'>
  Security Code:
  {{randomCode}}
  |
  {{date}}
</div>